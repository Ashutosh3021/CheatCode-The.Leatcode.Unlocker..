{
    "manifest_version": 3,
    "name": "LeetCode Unlock",
    "version": "1.0.0",
    "description": "Unlocks LeetCode Premium content: editorials, company tags, frequency data.",
    "icons": {
        "16": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "action": {
        "default_popup": "dist/index.html",
        "default_title": "LeetCode Unlock",
        "default_icon": {
            "16": "assets/logo.png",
            "48": "assets/logo.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "dist/main.js"
            ],
            "css": [
                "dist/style.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://sheets.googleapis.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "https://leetcode.com/*"
            ]
        }
    ]
}